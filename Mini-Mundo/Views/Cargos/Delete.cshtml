@model Mini_Mundo.Models.Cargo

@{
    ViewData["Title"] = "Deletar";
}

<h1>Deletar</h1>

<h3 class="mb-4">Tem certeza que deseja deletar? Esta ação será Permanente!</h3>
<div>
    <h4>Cargo</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Titulo)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Titulo)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Descricao)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Descricao)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.SalarioMinimo)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.SalarioMinimo)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.SalarioMaximo)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.SalarioMaximo)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="CargoID" />
        <input type="submit" value="Deletar" class="btn btn-danger" /> |
        <a asp-action="Index">Voltar para Lista</a>
    </form>
</div>
