@model IEnumerable<Mini_Mundo.Models.Cargo>

@{
    ViewData["Title"] = "Cargos";
}

<h1 class="mb-4">Lista de Cargos</h1>

<p>
    <a asp-action="Create" class="btn btn-sm btn-success"><i class="bi bi-plus-lg"></i>  Cadastrar novo Cargo</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.CargoID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Titulo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Descricao)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SalarioMinimo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SalarioMaximo)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CargoID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Titulo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Descricao)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SalarioMinimo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SalarioMaximo)
            </td>
            <td>
                    <a asp-action="Edit" class="btn btn-sm btn-warning" asp-route-id="@item.CargoID"><i class="bi bi-pencil-fill"></i>  Editar</a>
                    <a asp-action="Details" class="btn btn-sm btn-primary" asp-route-id="@item.CargoID"><i class="bi bi-list"></i>  Detalhes</a>
                    <a asp-action="Delete" class="btn btn-sm btn-danger" asp-route-id="@item.CargoID"><i class="bi bi-trash-fill"></i>  Deletar</a>
            </td>
        </tr>
}
    </tbody>
</table>
