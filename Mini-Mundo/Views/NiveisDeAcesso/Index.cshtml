@model IEnumerable<Mini_Mundo.Models.NivelDeAcesso>

@{
    ViewData["Title"] = "Níveis de Acesso";
}

<h1>Lista de Níveis de Acesso</h1>

<p>
    <a asp-action="Create" class="btn btn-sm btn-success"><i class="bi bi-plus-lg"></i>  Novo Nível de Acesso</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.NivelDeAcessoID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NomeNivel)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.NivelDeAcessoID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NomeNivel)
            </td>
            <td>
                    <a asp-action="Edit" class="btn btn-sm btn-warning" asp-route-id="@item.NivelDeAcessoID"><i class="bi bi-pencil-fill"></i>  Editar</a>
                    <a asp-action="Details" class="btn btn-sm btn-primary" asp-route-id="@item.NivelDeAcessoID"><i class="bi bi-list"></i>  Detalhes</a>
                    <a asp-action="Delete" class="btn btn-sm btn-danger" asp-route-id="@item.NivelDeAcessoID"><i class="bi bi-trash-fill"></i>  Deletar</a>
            </td>
        </tr>
}
    </tbody>
</table>
